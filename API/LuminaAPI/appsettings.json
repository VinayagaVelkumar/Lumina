{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "MongoDB",
        "Args": {
          "databaseUrl": "mongodb://localhost:27017/LuminaDB",
          "collectionName": "LogDetails",
          "cappedMaxSizeMb": "1024",
          "cappedMaxDocuments": "50000"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "CollectionNames": {
    "Product": "ProductDetails",
    "Colour": "ColorDetails",
    "Category": "CategoryDetails",
    "Size": "SizeDetails",
    "Alias": "AliasDetails",
    "Model": "ModelDetails",
    "ProductAvailability": "PADetails",
    "ProductAvailabilityTrans": "PADTransacs",
    "Image": "ImageDetails",
    "Brand": "BrandDetails",
    "Tag": "TagDetails",
    "Purchase": "PurchaseDetails",
    "ImageFolder": "C:\\Hosting\\Lumina API\\assets",
    "Sale": "SaleDetails",
    "User": "Users"
  },
  "ConnectionConfig": {
    "ConnectionString": "mongodb://localhost:27017/",
    "DBName": "LuminaDB",
    "Issuer": "LuminaAPI",
    "Audience": "LuminaUI",
    "SecretKey": "LuminaSecretKeyForTheLuminaAPIJWTToken"
  }
}
